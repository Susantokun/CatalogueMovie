<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.susantokun.project1_cataloguemovie.DetailMovieActivity">

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Title"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_detail_poster"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_detail_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rilis : -" />

    <TextView
        android:id="@+id/tv_detail_vote_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total : 0 suara" />

    <TextView
        android:id="@+id/tv_detail_vote_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating : 0%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kilasan Singkat"
        android:textStyle="bold" />

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:id="@+id/tv_detail_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mohon maaf untuk saat ini kami belum memiliki kilasan singkat." />

</LinearLayout>